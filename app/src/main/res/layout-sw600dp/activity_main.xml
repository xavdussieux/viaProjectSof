<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fontport"
    tools:context="com.example.xavier.viaproject.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strings On Fire"
            android:textAlignment="center"
            android:clickable="false"
            android:textStyle="bold"
            android:textSize="80sp"
            android:typeface="serif"
            android:id="@+id/titleText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New player?"
            android:textSize="30sp"
            android:id="@+id/textName"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:layout_width="400dp"
            android:layout_height="75dp"
            android:background="@drawable/play"
            android:onClick="play"
            android:layout_margin="20dp"/>

        <ImageButton
            android:layout_width="400dp"
            android:layout_height="75dp"
            android:background="@drawable/showrecords"
            android:onClick="showScores"
            android:layout_margin="20dp"/>

        <ImageButton
            android:layout_width="400dp"
            android:layout_height="75dp"
            android:background="@drawable/settings"
            android:onClick="showSettings"
            android:layout_margin="20dp"/>

        <ImageButton
            android:layout_width="400dp"
            android:layout_height="75dp"
            android:background="@drawable/quit"
            android:id="@+id/exitButton"
            android:layout_margin="20dp"/>

    </LinearLayout>

</RelativeLayout>
